<div class="container">
	<!-- サイドバー -->
	<div class="col-lg-3 sidebar clearfix">
	<%= render 'users/user', user: @user %>
	<%= render 'users/archive', archives: @archives, post: @post %>
	</div>
	<!-- ここまで -->
	<div class="col-lg-8 col-lg-offset-1 scroll">
		<div class="row">
			<div style="border: 1px solid black;margin-bottom: 10px;">
				<div class="row" style="margin: 15px 0 15px 30px;">
					<%= link_to user_path(@post.user) do %>
						<%= attachment_image_tag @post.user, :user_image, :fill, 60, 60, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg",size:'40x40', style: "border-radius: 50%;" %>
					<% end %>
					<p style="padding: 10px 0 0 80px;"><%= @post.prefecure %></p>
					<!-- いいね -->
					<% if @post.favorited_by?(current_user) %>
	                    <%= link_to post_favorites_path(@post), method: :delete do %>
	                      <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
	                      <%= @post.favorites.count %>
	                    <% end %>
	                <% else %>
	                    <%= link_to post_favorites_path(@post), method: :post do %>
	                      <i class="far fa-heart" aria-hidden="true"></i>
	                      <%= @post.favorites.count %>
	                    <% end %>
	                <% end %>
					<!-- ここまで -->
					<!-- コメント -->
					<%= link_to post_path(@post) do %>
						<i class="fas fa-comment-alt"></i>
						<%= @post.comments.count %>
					<% end %>
					<!-- ここまで -->
				</div>
				<div class="row" style="margin: 30px;width: 700px;height:450px;overflow:auto;">
					<% @post.post_images.each do |post_image| %>
						<%= attachment_image_tag post_image, :post_image, size: "700x400", format: 'jpeg',style: "object-fit: contain;margin-top: 5px;border: 1px solid #dcdcdc;" %>
					<% end %>
				</div>
				<div class="row" style="margin: 15px 15px 15px 30px;word-wrap: break-word;">
					<%= @post.body %>
				</div>
			</div>
		</div>
		<!-- コメント -->
		<div class="row">
			<% @post.comments.each do |comment| %>
			<li style="list-style: none;">
				<div class="row" style="margin: 25px 0;border-bottom: 1px solid #dcdcdc;padding-bottom: 15px;">
	              <div class="col-xs-2">
	              	<div class="row">
		                <%= link_to user_path(comment.user.id) do %>
		                  <%= attachment_image_tag comment.user, :user_image, :fill, 40, 40, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg",size:'40x40', style: "border-radius: 50%;" %>
		                <% end %>
		            </div>
	                <div class="row">
	                  <%= link_to @post.user.name,user_path(@post.user.id) %>
	                </div>
	              </div>
	              <div class="col-xs-8"><%= comment.comment %></div>
	              <div class="col-xs-2">
	                <% if comment.user_id == current_user.id %>
	                  <%= link_to "削除", post_comment_path(comment.post, comment), method: :delete ,class: "btn btn-danger" %>
	                <% end %>
	              </div>
	            </div>
            </li>
          <% end %>
		</div>
		<div class="row">
        <%= form_with(model: [@post, @comment]) do |f| %>
          <%= f.text_area :comment, size: "106x5" %>
          <%= f.submit "送信", class: "btn btn-default" %>
        <% end %>
      </div>
	<div>
</div>
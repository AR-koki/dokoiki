<div class="container-fluid">
	<!-- サイドバー -->
	<div class="col-lg-3 sidebar">
	<%= render 'users/user', user: @user %>
	<%= render 'users/archive', archives: @archives, post: @post, user: @user %>
	</div>
	<!-- ここまで -->
	<div class="col-lg-8 col-lg-offset-1"style="width: 900px;height:700px;overflow:auto;">
		<div class="flash">
	  		<% if flash[:notice] %>
	  			<p><i class="far fa-check-square"></i><%= flash[:notice] %></p>
	  		<% end %>
	  	</div>
		<div class="row"style="width:780px;">
			<div style="border: 1px solid #edb2c4;margin-bottom: 10px;background-color: #ffffff">
				<div class="row" style="margin: 15px 0 15px 30px;">
					<%= link_to user_path(@post.user) do %>
						<%= attachment_image_tag @post.user, :user_image, :fill, 60, 60, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg",size:'40x40', style: "border-radius: 50%;" %>
					<% end %>
					<p style="padding: 10px 0 0 150px;float: left;"><%= @post.prefecure %></p>
					<!-- いいね -->
					<div style="margin: 10px 0 0 40px;float: left;margin-left: 400px;">
						<% if @post.favorited_by?(current_user) %>
		                    <%= link_to post_favorites_path(@post), method: :delete do %>
		                      <i class="fas fa-star" aria-hidden="true" style="color: #FFCC00;"></i>
		                      <%= @post.favorites.count %>
		                    <% end %>
		                <% else %>
		                    <%= link_to post_favorites_path(@post), method: :post do %>
		                      <i class="far fa-star" aria-hidden="true"></i>
		                      <%= @post.favorites.count %>
		                    <% end %>
		                <% end %>
						<!-- ここまで -->
						<!-- コメント -->
						<%= link_to post_path(@post) do %>
							<i class="fas fa-comment-alt"></i>
							<%= @post.comments.count %>
						<% end %>
					</div>
					<!-- ここまで -->
				</div>
				<div class="row" style="margin: 30px;width: 700px;height:450px;overflow:auto;">
					<% @post.post_images.each do |post_image| %>
						<%= attachment_image_tag post_image, :post_image, size: "700x400", format: 'jpeg',style: "object-fit: contain;margin-top: 5px;border: 1px solid #dcdcdc;" %>
					<% end %>
				</div>
				<div class="row" style="margin: 15px 15px 15px 30px;word-wrap: break-word;">
					<%= @post.body %>
				</div>
			</div>
		</div>
		<!-- コメント -->
		<div class="row">
			<% @post.comments.each do |comment| %>
			<li style="list-style: none;">
				<div class="row" style="margin: 25px 0;border-bottom: 1px solid #edb2c4;padding-bottom: 15px;">
	              <div class="col-xs-1">
	              	<div class="row">
		                <%= link_to user_path(comment.user.id) do %>
		                  <%= attachment_image_tag comment.user, :user_image, :fill, 40, 40, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg",size:'40x40', style: "border-radius: 50%;" %>
		                <% end %>
		            </div>
	                <div class="row">
	                  <%= link_to @post.user.name,user_path(@post.user.id) %>
	                </div>
	              </div>
	              <div class="col-xs-9" style="word-wrap: break-word;"><%= comment.comment %></div>
	              <div class="col-xs-2">
	                <% if comment.user_id == current_user.id %>
	                  <%= link_to post_comment_path(comment.post, comment), method: :delete do%>
	                  	<i class="fas fa-window-close" style="font-size: 20px; color: red;"></i>
	                  <% end %>
	                <% end %>
	              </div>
	            </div>
            </li>
          <% end %>
		</div>
		<div class="row">
        <%= form_with(model: [@post, @comment]) do |f| %>
          <div><%= f.text_area :comment, size: "106x5" %></div>
          <div><%= f.submit "送信", class: "btn btn-default" %></div>
        <% end %>
      </div>
	<div>
</div>
	<div class="row">カテゴリーから検索</div>
	<div class="row">
		<%= form_with url: category_searched_path, method: :get, local: true do |f| %>
			<%= f.hidden_field :id, :value => 1 %>
			<%= f.submit Post.categories.key(1),style: "float: left;" %>
		<% end %>

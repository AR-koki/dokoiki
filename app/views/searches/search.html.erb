			<%= f.hidden_field :id, :value => 5 %>
			<%= f.submit Post.categories.key(5),style: "float: left;" %>
		<% end %>
	</div>
	<div class="row">ワードから検索</div>
		<%= form_with url: word_searched_path, method: :get, local: true do |f| %>
		<%= f.text_field :word %>
		<%= button_tag :type => "submit" do %>
            <i class="fa fa-search"></i>
          <% end %>
		<% end %>
	<div class="row"></div>
</div>

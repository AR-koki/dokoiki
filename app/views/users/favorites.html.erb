<div class="container">
	<!-- サイドバー -->
	<div class="col-lg-3 sidebar clearfix">
	<%= render 'users/user', user: @user %>
	<%= render 'users/archive', archives: @archives, post: @post %>
	</div>
	<!-- ここまで -->
	<div class="col-lg-8 col-lg-offset-1">
		<div class="row">
			<% @favorites.each do |favorite| %>
				<div style="border: 1px solid black;margin-bottom: 10px;">
					<div class="row" style="margin: 15px 0 15px 30px;">
						<%= link_to user_path(favorite.post.user) do %>
							<%= attachment_image_tag favorite.post.user, :user_image, :fill, 60, 60, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg",size:'40x40', style: "border-radius: 50%;" %>
						<% end %>
						<p style="padding: 10px 0 0 80px;"><%= favorite.post.prefecure %></p>
						<!-- いいね -->
						<% if favorite.post.favorited_by?(current_user) %>
		                    <%= link_to post_favorites_path(favorite.post), method: :delete do %>
		                      <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
		                      <%= favorite.post.favorites.count %>
		                    <% end %>
		                <% else %>
		                    <%= link_to post_favorites_path(favorite.post), method: :post do %>
		                      <i class="far fa-heart" aria-hidden="true"></i>
		                      <%= @post.favorites.count %>
		                    <% end %>
		                <% end %>
		                <!-- コメント -->
						<%= link_to post_path(favorite.post) do %>
							<i class="fas fa-comment-alt"></i>
							<%= favorite.post.comments.count %>
						<% end %>
					</div>
					<div class="row" style="margin-left: 30px;">
						<%= link_to post_path(favorite.post) do %>
						<% favorite.post.post_images.each do |post_image| %>
							<%= attachment_image_tag post_image, :post_image, size: "700x400", format: 'jpeg' %>
						<% end %>
						<% end %>
					</div>
					<div class="row" style="margin: 15px 0 15px 30px;">
						<%= @post.body %>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>
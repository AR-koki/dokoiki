<div class="container">
	<!-- サイドバー -->
	<div class="col-lg-3">
		<div class="row">
			<%= link_to "編集", edit_user_path(current_user),class: "btn btn-success btn-block" %>
		</div>
		<div class="row">
			<div class="col-xs-6">
				<%= attachment_image_tag @user, :user_image, :fill, 60, 60, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %>
			</div>
			<div class="col-xs-6">
				<%= @user.name %>
			</div>
		</div>
		<div class="row">
			<%= @user.introduction %>
		</div>
		<div class="row">
			<div class="col-xs-4">制覇数</div>
			<div class="col-xs-6"></div>
			<div class="col-xs-2">/47</div>
		</div>
		<div class="row">
			<%= link_to "フォロー一覧", "",class: "btn btn-success btn-block" %>
		</div>
		<div class="row">
			<%= link_to "お気に入り一覧", "",class: "btn btn-success btn-block" %>
		</div>
		<div class="row">投稿(月別)</div>
	</div>
	<!-- ここまで -->
	<div class="col-lg-9">
		<div class="row">
			<% @posts.each do |post| %>
			<div>
				<div class="row">
					<%= attachment_image_tag @user, :user_image, :fill, 60, 60, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %>
					<p><%= post.prefecure %></p>
					<p><%= @user.name %></p>
				</div>
				<div class="row">
					<%= attachment_image_tag post, :post_image, :fill, 60, 60, format: 'jpeg' %>
				</div>
				<div class="row">
					<%= link_to edit_post_path do %>
					  <i class="fas fa-cog"></i>
					<% end %>
				</div>
				<div class="row">
					<%= post.body %>
				</div>
			</div>
			<% end %>
		</div>
	<div>
</div>
<h2>Follower Users</h2>
<% if @users.count > 0 %>
	<% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag(@user, :profile_image, :fill, 50, 50) %></td>
        <td><%= user.name %></td>
        <td>フォロー数：<%= user.followings.count %></td>
        <td>フォロワー数：<%= user.followers.count %></td>
        <td>
          <% unless current_user == user %>
            <% if current_user.following?(user) %>
                      <%= form_for(current_user.relationships.find_by(follow_id: user.id), html: { method: :delete }) do |f| %>
                        <%= hidden_field_tag :follow_id, user.id %>
                        <%= button_tag :type => "submit", :class =>"btn btn-default btn-s-md" do %>
              <i class="fas fa-user-minus" style="color: #FF3300;"></i></i>
              <% end %>
                      <% end %>
                    <% else %>
                      <%= form_for(current_user.relationships.build) do |f| %>
                        <%= hidden_field_tag :follow_id, user.id %>
                        <%= button_tag :type => "submit", :class =>"btn btn-default btn-s-md" do %>
              <i class="fas fa-user-plus" style="color: #66CCFF;"></i></i>
              <% end %>
                      <% end %>
                    <% end %>
          <% end %>
        </td>
        <td><%= link_to 'Show', @user, class: "user_#{user.id}" %></td>
      </tr>
    <% end %>
<% else %>
  <p>ユーザーはいません</p>
<% end %>